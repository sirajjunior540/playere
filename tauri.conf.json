{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "./dist",
    "distDir": "./dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "YouTube Player",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "startDragging": true
      }
    },
    "bundle": {
      "active": false,
      "identifier": "com.playere.app"
    },
    "security": {
      "csp": "default-src 'self'; frame-src 'self' https://www.youtube.com; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "YouTube Player",
        "width": 1280,
        "height": 720,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": false
      }
    ]
  }
}